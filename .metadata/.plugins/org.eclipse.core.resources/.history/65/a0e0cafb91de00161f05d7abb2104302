public class YahooPaypal {
	
	@BeforeTest
	public void setUp(){

		System.setProperty("webdriver.gecko.driver", "E:\\Geetha\\Selenium\\geckodriver.exe");
	}

	@Test
	public void openPage(){
		WebDriver driver = new FirefoxDriver();
		
		driver.get("https://finance.yahoo.com/");
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(20, TimeUnit.SECONDS);
		
		WebElement ele = driver.findElement(By.tagName("input"));
		
		ele.clear();
		ele.sendKeys("pypl");
		
		driver.findElement(By.id("search-button")).click();
		
		driver.findElement(By.xpath("/html/body/div[1]/div/div/div[1]/main/div/div[3]/div/div/section/div[1]/div[2]/div[1]/div/span[1]")).getText();

