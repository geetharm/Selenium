package org.geetha.testng;

import org.testng.Assert;
import org.testng.annotations.Test;
import org.testng.annotations.DataProvider;

public class CalculatorTest {
	private Calculator calc = new Calculator();
  
  @Test(groups = {"init"})
  public void testAdd() {
	  Assert.assertEquals(calc.add(5, 6), 11);
  }
  
  @Test(enabled=false)
  public void testAddLargeNumbers() {
	  int c = calc.add(Integer.MAX_VALUE, Integer.MAX_VALUE);
	  System.out.println(c);
	  Assert.assertEquals(c, 11);
  }

  
  @DataProvider(name = "abc")
  public Object[][] createData1() {
	  return new Object[][] { 
		  {	new Integer(8), new Integer(5) }, 
		  { new Integer(5), new Integer(2) },
		  { new Integer(5), new Integer(4) }
	  };
  }

  @Test(dataProvider = "abc", groups = "init")
  public void testSub(Integer a, Integer b) {
	  Assert.assertEquals(calc.subtract(a, b), 3);
  }

  @Test(dependsOnMethods = {"testSub"})
  public void testMul() {
	  Assert.assertEquals(calc.multiply(10, 2), 20);
  }
  
  @Test()
  public void testdiv() {
	  Assert.assertEquals(calc.div(10, 2), 20);
  }
}
